@import 'utils/fonts.styl'
@import 'utils/variables.styl'
@import 'utils/mixins.styl'
@import 'libs.styl'

html
	font-size 100%
	height 100%
	background-color clBackground
	line-height 1.3

body
	font-family "roboto"
	font-style normal
	height 100%
	background-color clBackground
	display flex
	flex-direction column
	justify-content space-between
	min-width 320px

h1,h2,h3,h4,h5,h6
	margin 0

ul,li
	list-style-type none
	margin 0
	padding 0

p
	margin 0
	margin-bottom 5px

	&:last-child
		margin-bottom 0

a
	color black
	text-decoration none

audio,
canvas,
iframe,
img,
svg,
video
	vertical-align middle

textarea
	resize none

section
	position relative

input,
select,
button
	outline none

*, *:before, *:after
	box-sizing border-box

.container
	width 100%
	margin 0 auto
	padding 0 16px

	@media (min-width: $tablet)
		padding 0 30px
		margin-left 88px

.page-wrapper
	min-height 100%

.wrapper
	display flex
	flex-direction column
	justify-content space-between
	min-height 100%

.content
	flex 1 0 auto
	height 100%

.header
.footer 
	flex 0 0 auto

