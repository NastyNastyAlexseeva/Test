.menu
    display none
    absolute-all(0)
    z-index -100
    min-height 100%
    width 100%
    opacity 0
    transition all transitionLink
    background clTransparentBkgr
    
    &.open
        display block
        z-index 2500
        opacity 1
        transition all transitionLink

    &__wrapper
        background clMenuBkgr
        min-height 100%
        width 100%
        padding 0 25px
        flexD(column, flex-start, flex-start, nowrap)

        @media (min-width: $tablet)
            padding 0 97px
            flexD(column, center, flex-start, nowrap)
        
        @media (min-width: $desktop-min)
            width 60vw
        
        @media (min-width: $desktop)
            width 53vw
    
    &__content
        padding-top 80px
        flex 1 1 auto

        @media (min-width: $tablet)
            flex 0 0 auto
            padding-top 0
    
    &__nav
        margin-bottom 38px
    
    &__list
        padding 0
    
    &__item
        margin-bottom 15px

        &:last-child
            margin-bottom 0
        a
            font-weight 500
            font-size 22px
            line-height 26px
            color clFontWhite
            text-transform uppercase

            &:hover
            &:focus
            &:active
            &.active
                color clGreen
                transition all transitionLink
            
            &.disabled
                color clDisablid
            
            @media (min-width: $tablet)
                font-size 28px
                line-height 33px