.burger
    padding-top 2px
    padding-left 5px
    height 26px
    width 26px

    &__language
        display none

    &__icon
        -moz-appearance none
        -webkit-appearance none
        border none
        background-color clBlack
        width 100%
        height 3px
        border-radius 25%
        position relative

        &:before
        &:after
            position absolute
            content ""
            background-color clBlack
            width 100%
            height 3px
            border-radius 25%
            left 0
        
        &:after
            top 8px
        &:before
            bottom 8px