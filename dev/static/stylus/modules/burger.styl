.burger
    margin-left 10px

    @media (min-width: $tablet)
        background-color clDark
        min-height 100%
        position fixed
        top 0
        left 0
        bottom 0
        z-index 25000
        margin-left 0
        width 85px
        padding-top 22px
        padding-bottom 35px
        flexD(column, space-between, stretch, nowrap)

    &__icon
        height 46px
        width 46px
        -moz-appearance    none
        -webkit-appearance none
        appearance         none
        border none
        background-color transparent
        padding 3px 5px 0 2px
        position relative
        top -10px
        cursor pointer

        @media (min-width: $tablet)
            padding 0 24px
            width 100%
            position static
        
        span
            width 21px
            height 3px
            border-radius 25%
            position relative
            display inline-block
            vertical-align middle
            background-color clBlack

            @media (min-width: $tablet)
                background-color #fff
                width 100%

            &:before
            &:after
                position absolute
                content ""
                background-color clBlack
                width 21px
                height 3px
                border-radius 25%
                left 0
            
                @media (min-width: $tablet)
                    background-color #fff
                    width 100%
        
            &:after
                top 8px
            &:before
                bottom 8px
    
    &__language
        display none
         
        @media (min-width: $tablet)
            display block
            -moz-appearance    none
            -webkit-appearance none
            appearance         none
            border none
            background-color transparent
            font-weight 700
            font-size 13px
            line-height 15px
            color clGreen
            text-shadow 0px 4px 4px rgba(0, 0, 0, 0.25)