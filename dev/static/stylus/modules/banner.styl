.banner
    flexD(column, flex-start, stretch, nowrap)
    height 100%

    @media (min-width: $tablet)
        paddingMenu()

    &__wrapper
        flex 1 0 auto
    
    &__sub-title
        font-weight 700
        font-size 32px
        color clFontGreen
        line-height 100%
        word-wrap break-word

        @media (min-width: $tablet)
            font-size 70px

    &__title
        font-weight 700
        font-size 32px
        color clFontBlack
        margin-bottom 10px
        word-wrap break-word

        @media (min-width: $tablet)
            font-size 70px
            line-height 66px
            margin-bottom 28px
    
    &__text
        font-weight 300
        font-size 18px
        line-height 21px
        color clFontGray500
        margin-bottom 31px
        word-wrap break-word

        @media (min-width: $tablet)
            font-size 26px
            line-height 30px
            margin-bottom 61px
